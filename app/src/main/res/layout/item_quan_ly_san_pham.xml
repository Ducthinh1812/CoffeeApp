<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgqlSP"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:background="@drawable/boderradius1" />
    <LinearLayout
        android:id="@+id/CarviewqlSP"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvtenqlSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="23dp"
            android:textColor="#8C746A"/>
        <TextView
            android:id="@+id/tvGiaqlSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textSize="18dp"
            android:textColor="#8C746A"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/suaxoa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgXoaSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@android:drawable/ic_menu_delete" />

        <ImageView
            android:id="@+id/imgSuaSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit" />

    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>