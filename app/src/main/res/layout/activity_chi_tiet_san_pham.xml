<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".activity.ChiTietSanPham">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:background="@drawable/boderradius1"
            android:id="@+id/imageviewchitietsanpham"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boderradius"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textviewtenchitietsanpham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:text="matchoa"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"
                        android:textColor="#8C746A"
                        android:textSize="27dp" />

                    <TextView
                        android:id="@+id/textviewgiachitietsanpham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="Giá: "
                        android:textColor="#8C746A"
                        android:textSize="20dp" />
                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Số Lượng: "
                            android:textSize="21dp"
                            android:gravity="center"
                            android:layout_marginRight="30dp"
                            android:textColor="#8C746A"/>
                        <Button
                            android:id="@+id/buttontruCTSP"
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:text="-"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/spinner"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:textColor="#8C746A"/>
                        <Button
                            android:id="@+id/buttoncongCTSP"
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:text="+"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/buttondatmua"
                        android:layout_width="350dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Thêm Giỏ Hàng"
                        android:textSize="13sp"
                        android:background="@drawable/boderradius"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfaf5"
        android:orientation="vertical">
        <TextView
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Thông tin sản phẩm"
            android:textStyle="bold"
            android:textSize="23sp" />

        <ScrollView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewmotachitietsanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Chi Tiết SP"
                android:textColor="#8C746A"
                android:textSize="15dp" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>