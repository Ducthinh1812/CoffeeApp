<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor=" #000000"
        android:layout_height="40dp"
        android:text="Sửa Sản Phẩm"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#001f4d"
                android:text="Tên Sản phẩm: "
                android:layout_gravity="center"
                android:textSize="14sp"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/editTENSPT"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#001f4d"
                android:text="Số lượng: "
                android:layout_gravity="center"
                android:textSize="14sp" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/editSOLUONGNHAPT"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#001f4d"
                android:text="Hình Ảnh Sản Phẩm"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editHASPT"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#001f4d"
                android:text="Giá Bán: "
                android:textSize="14sp" />
            <EditText
                android:layout_weight="1"
                android:id="@+id/editGIABANT"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#001f4d"
                android:text="Size: "
                android:textSize="14sp" />
            <EditText
                android:layout_weight="1"
                android:textSize="12dp"
                android:inputType="textPersonName"
                android:id="@+id/editSizesp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#001f4d"
                android:text="Mô Tả"
                android:textSize="14sp"
                android:layout_weight="1"/>
            <EditText
                android:layout_weight="1"
                android:textSize="12dp"
                android:id="@+id/editMOTASPT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#001f4d"
                android:text="Mã loại: "
                android:textSize="14sp" />
            <EditText
                android:layout_weight="1"
                android:textSize="12dp"
                android:id="@+id/editMaLoaiT"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>



</LinearLayout>
    <LinearLayout
        android:layout_width="360dp"

        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnHuyThem"
            android:layout_width="160dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Hủy"/>
        <Button
            android:id="@+id/btnLuuThem"
            android:layout_width="160dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Lưu"/>
    </LinearLayout>
</LinearLayout>